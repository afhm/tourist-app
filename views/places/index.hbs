<!-- Section: Popular places starts here-->
<section id="popular" class="section section-popular scrollspy">
    <div class="container">
        <div class="row">
            <h4 class="center"><span class="teal-text">Popular</span> Places</h4>
            {{#each places}}
            <div class="col s12 m4">
                <div class="card">
                    <div class="card-image">
                        <img src="{{imagePath}}">
                        <span class="card-title">{{title}}</span>
                    </div>
                    <div class="card-content">
                        {{description}}
                    </div>
        
                    <div class="card-action">
                        <a href="/places/indplace/{{id}}"><button class="btn right waves-effect waves-light">Read More</button></a>
                        <a href="/places/edit/{{id}}"><button class="btn waves-effect waves-light" type="submit" name="action">Edit
                                <form method="post" action="/places/{{id}}?_method=DELETE">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button class="btn waves-effect waves-light" type="submit" name="action">Delete

                                    </button>

                                </form>

                            </button></a>
                    </div>

                </div>
            </div>
            {{else}}
            <p> no places</p>
            {{/each}}


        </div>


    </div>
</section>
<!-- Section: Popular places ends here-->